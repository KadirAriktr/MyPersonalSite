@model MyPersonalSite.Areas.Writer.Models.UserEditViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Profil Bilgilerini Düzenle</h4>
            <form class="forms-sample" method="post" enctype="multipart/form-data">

                <div class="form-group">
                    <label for="exampleInputName1">Adınız:</label>
                    <input type="text" class="form-control" id="exampleInputName1" placeholder="Ad" asp-for="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="exampleInputName1">Soyadınız:</label>
                    <input type="text" class="form-control" id="exampleInputName1" placeholder="Soyad" asp-for="Surname">
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="exampleInputPassword4">Şifreniz:</label>
                    <input type="password" class="form-control" id="exampleInputPassword4" placeholder="Şifre" asp-for="Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="exampleInputPassword4">Şifre Tekrar:</label>
                    <input type="password" class="form-control" id="exampleInputPassword4" placeholder="Şifre Tekrar" asp-for="PasswordConfirm">
                    <span asp-validation-for="PasswordConfirm" class="text-danger"></span> 
                </div>

                <div class="form-group">
                    <label>Fotoğraf Seç</label>
                    <input type="file" asp-for="Picture">
                  
                </div>

                <button type="submit" class="btn btn-primary mr-2">Güncelle</button>
                <button type="button" class="btn btn-light" onclick="window.history.back();">İptal</button>
            </form>
        </div>
    </div>
</div>


