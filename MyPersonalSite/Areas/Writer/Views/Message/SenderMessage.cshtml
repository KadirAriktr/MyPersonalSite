@using EntityLayer.Concrete
@model List<WriterMessage>
@{
    ViewData["Title"] = "SenderMessage";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Giden Kutusu</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Konu</th>
                            <th>Alıcı</th>
                            <th>Tarih</th>
                            <th>Detaylar</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var items in Model)
                        {
                           
                            <tr>
                                <td>@items.WriterMessageID</td>
                                <td>@items.Subject</td>
                                <td>@items.ReceiverName</td>
                                <td>@(((DateTime)items.Date).ToString("dd-MMM-yyyy"))</td>

                                <td><a href="/Writer/Message/MessageDetails/@items.WriterMessageID" class="btn btn-outline-primary">Mesajı Gör!</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
