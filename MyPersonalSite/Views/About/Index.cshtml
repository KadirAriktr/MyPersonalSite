@model EntityLayer.Concrete.Announcement

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("Index", "Announcement", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">

                <p class="card-description">Yeni Duyuru Ekleme Paneli</p>

                <!-- Genel hata mesajlarını göstermek için -->
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label>Başlık</label>
                    <input type="text" class="form-control" asp-for="Title">
                    <span asp-validation-for="Title" class="text-danger"></span> <!-- Başlık hatası buraya gelir -->
                </div>

                <div class="form-group">
                    <label>Tarih</label>
                    <input type="text" class="form-control" asp-for="Date">
                    <span asp-validation-for="Date" class="text-danger"></span> <!-- Tarih hatası buraya gelir -->
                </div>

                <div class="form-group">
                    <label>Durum</label>
                    <input type="text" class="form-control" asp-for="Status">
                    <span asp-validation-for="Status" class="text-danger"></span> <!-- Durum hatası buraya gelir -->
                </div>

                <div class="form-group">
                    <label for="exampleTextarea1">Açıklama</label>
                    <textarea class="form-control" asp-for="Content" rows="6"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span> <!-- İçerik hatası buraya gelir -->
                </div>

                <button type="submit" class="btn btn-primary me-2">Kaydet</button>
                <button type="button" class="btn btn-dark" onclick="window.history.back();">İptal</button>

            </div>
        </div>
    </div>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
