@model EntityLayer.Concrete.WriterMessage
@{
    ViewData["Title"] = "AdminMessageSend";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <p class="card-description">Yeni Mesaj Gönderme Paneli</p>
            <form class="forms-sample" method="post">

                <div class="form-group">
                    <label for="Title">Konu</label>
                    @Html.TextBoxFor(x => x.Subject, new { @class = "form-control", id = "Title" })
                </div>
                <div class="form-group">
                    <label for="Value">Alıcı</label>
                    @Html.TextBoxFor(x => x.Receiver, new { @class = "form-control", id = "Value" })
                </div>
                <div class="form-group">
                    <label for="Value">Mesaj</label>
                    @Html.TextAreaFor(x => x.MessageContent,10,3, new { @class = "form-control", id = "Value" })
                </div>

                <button type="submit" class="btn btn-primary me-2">Gönder</button>
                <button type="button" class="btn btn-dark" onclick="window.history.back();">İptal</button>
            </form>
        </div>
    </div>
</div>

