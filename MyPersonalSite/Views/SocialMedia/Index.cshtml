@using EntityLayer.Concrete
@model List<SocialMedia>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}



<!-- Light table -->
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Sosyal Medya Hesapları</h4>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var items in Model)
                        {
                            <tr>
                                <td>@items.SocialMediaId</td>
                                <td>@items.SocialMediaName</td>
                                <td><a href="/SocialMedia/DeleteSocialMedia/@items.SocialMediaId" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/SocialMedia/EditSocialMedia/@items.SocialMediaId" class="btn btn-outline-success">Güncelle</a></td>

                            </tr>

                        }
                    </tbody>
                </table>
                <br />
                <center><a href="/SocialMedia/AddSocialMedia/" class="btn btn-outline-info">Yeni Hesap Ekle</a></center>

            </div>
        </div>
    </div>
</div>


