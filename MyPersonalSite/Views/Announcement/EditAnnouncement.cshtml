@model EntityLayer.Concrete.Announcement
@{
    ViewData["Title"] = "EditAnnouncement";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <p class="card-description">Yetenek Güncelleme Paneli</p>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="ID">Id</label>
                    @Html.TextBoxFor(x => x.ID, new { @class = "form-control", id = "ID" })
                </div>
                <div class="form-group">
                    <label for="Title">Başlık</label>
                    @Html.TextBoxFor(x => x.Title, new { @class = "form-control", id = "Title" })
                </div>
                <div class="form-group">
                    <label for="Date">Tarih</label>
                    @Html.TextBoxFor(x => x.Date, new { @class = "form-control", id = "Date" })
                </div>
                <div class="form-group">
                    <label for="Status">Durum</label>
                    @Html.TextBoxFor(x => x.Status, new { @class = "form-control", id = "Status" })
                </div>
                <div class="form-group">
                    <label for="Content">İçerik</label>
                    @Html.TextBoxFor(x => x.Content, new { @class = "form-control", id = "Content" })
                </div>


                <button type="submit" class="btn btn-primary me-2">Kaydet</button>
                <button type="button" class="btn btn-dark" onclick="window.history.back();">İptal</button>
            </form>
        </div>
    </div>
</div>
