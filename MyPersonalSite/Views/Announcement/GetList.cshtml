@using EntityLayer.Concrete
@model List<Announcement>
@{
    ViewData["Title"] = "GetList";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}



<div class="card-header border-0">
    <h3 class="mb-0">Duyuru Listesi Tablosu</h3>
</div>
<!-- Light table -->
<div class="table-responsive">
    <table class="table align-items-center table-flush">
        <thead class="thead-light">
            <tr>
                <th scope="col" class="sort" data-sort="name">#</th>
                <th scope="col" class="sort" data-sort="budget">Başlık</th>
                <th scope="col" class="sort" data-sort="status">Tarih</th>
                <th scope="col">Sil</th>
                <th scope="col" class="sort" data-sort="completion">Düzenle</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody class="list">
            @foreach (var items in Model)
            {
                <tr>
                    <th>
                        @items.ID
                    </th>
                    <td class="budget">
                        @items.Title
                    </td>

                    <td>
                        @(((DateTime)items.Date).ToString("dd-MMM-yyyy"))
                    </td>
                    <td>
                        <a href="/Announcement/DeleteAnnouncement/@items.ID" class="btn btn-danger">Sil</a>
                    </td>
                    <td>
                        <a href="/Announcement/EditAnnouncement/@items.ID" class="btn btn-success">Güncelle</a>
                    </td>

                </tr>
            }


        </tbody>
    </table>
    <br />
    <center><a href="/Announcement/Index/" class="btn btn-primary">Yeni Duyuru Ekle</a></center>

</div>


