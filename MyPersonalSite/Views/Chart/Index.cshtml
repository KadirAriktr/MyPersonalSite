@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
<head>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>
    <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
    <script src="~/wwwroot/js/jquery-1.4.2.min.js"></script>
    <script src="~/wwwroot/js/jquery-ui-1.8.1.custom.min.js"></script>
    <script src="~/wwwroot/js/main.js"></script>
</head>
<center><h4>Uygulama Kullanıcı Rol Sayısı Grafikleri</h4></center>
<br />
<div class="row">
    <div class="col-md-10">
        <div style="float:right;width:800px;height:400px;">
            <canvas id="myChart"></canvas>
        </div>
        
        <script>
            var ctx = document.getElementById('myChart').getContext('2d');
            var chart = new Chart(ctx, {
                // The type of chart we want to create
                type: 'pie',

                // The data for our dataset
                data: {
                    labels: ['Admin', 'Yazar', 'Moderator', 'Ziyaretçi'],
                    datasets: [{
                        label: 'Veri Grafiği',
                        backgroundColor: [
                            'rgba(255, 99, 132, 1)',   // Kırmızı
                            'rgba(54, 162, 235, 1)',   // Mavi
                            'rgba(255, 206, 86, 1)',   // Sarı
                            'rgba(75, 192, 192, 1)'    // Yeşil
                        ],
                        borderColor: [
                            'rgba(255, 99, 132, 1)',   // Kırmızı
                            'rgba(54, 162, 235, 1)',   // Mavi
                            'rgba(255, 206, 86, 1)',   // Sarı
                            'rgba(75, 192, 192, 1)'    // Yeşil
                        ],
                        data: [@ViewBag.Admin, @ViewBag.Writer, @ViewBag.Moderator, @ViewBag.Visiter]
                    }]
                },

                // Configuration options go here
                options: {}
            });
        </script>
    </div>
</div>

