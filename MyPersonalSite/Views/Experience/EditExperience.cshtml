@model EntityLayer.Concrete.Experience

@{
    ViewData["Title"] = "AddExperience";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}




@using (Html.BeginForm("EditExperience", "Experience", FormMethod.Post))
{

    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">

                <p class="card-description">Deneyim Güncelleme Paneli</p>
                <form class="forms-sample">
                    <div class="form-group">
                        <label>Id</label>
                        @Html.TextBoxFor(x => x.ExperienceId, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Başlık</label>
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Name)
                    </div>
                    <div class="form-group">
                        <label>Tarih</label>
                        @Html.TextBoxFor(x => x.Date, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Date)
                    </div>
                    <div class="form-group">
                        <label>Görsel URL</label>
                        @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.ImageUrl)
                    </div>


                    <div class="form-group">
                        <label for="exampleTextarea1">Açıklama</label>
                        @Html.TextAreaFor(x => x.Description,6,3, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Description)
                    </div>
                    <button type="submit" class="btn btn-primary me-2">Kaydet</button>
                    <button type="button" class="btn btn-light" onclick="window.history.back();">İptal</button>
                </form>
            </div>
        </div>
    </div>

}
