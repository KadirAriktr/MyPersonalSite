@using EntityLayer.Concrete
@model List<Portfolio>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Projelerim</h4>
            
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th> Platform </th>
                            <th> Projelerim </th>
                            <th> Ücret </th>
                            <th> Durum </th>
                            <th> Tamamlanma Oranı </th>
                            <th> Sil</th>
                            <th> Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var items in Model)
                        {
                            <tr>
                                <td class="py-1">
                                    <img src="@items.Platform" alt="image" />
                                    
                                </td>
                                <td> @items.Name </td>
                                <td> @items.Price</td>
                                <td> %@items.Value</td>

                                <td>
                                    <div class="progress">
                                        <div class="progress-bar bg-success" role="progressbar" style="width: @items.Value%" aria-valuenow="@items.Value" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </td>

                                <td>
                                    <a href="/Portfolio/DeletePortfolio/@items.PortfolioId" class="btn btn-outline-danger">Sil</a>
                                </td>
                                <td>
                                    <a href="/Portfolio/EditPortfolio/@items.PortfolioId" class="btn btn-outline-success">Güncelle</a>
                                </td>

                            </tr>
                        }
                     
                        
                    </tbody>
                </table>
                <br />
                <center><a href="/Portfolio/AddPortfolio/" class="btn btn-info">Yeni Proje Ekle</a></center>
                
            </div>
        </div>
    </div>
</div>