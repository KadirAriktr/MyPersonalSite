@using EntityLayer.Concrete
@model List<Skill>
<div class="section px-3 px-lg-4 pt-5" id="skills">
    <div class="container-narrow">
        <div class="text-center mb-5">
            <h2 class="marker marker-center">Yeteneklerim</h2>
        </div>
        <div class="text-center">
            <p class="mx-auto mb-3" style="max-width:600px">Aşağıda, uzmanlık alanımda yer alan programlama dilleri ve teknolojilerle ilgili bir liste bulunmaktadır. Yeni bir programlama dilini öğrenmek benim için hızlı ve verimli bir süreçtir.</p>
        </div>
        <div class="bg-light p-3">
            <div class="row">
                <div class="col-md-12">
                    @foreach(var items in Model)
                    {
                        <div class="py-1">
                            <div class="d-flex text-small fw-bolder"><span class="me-auto">@items.Title</span><span>@items.Value</span></div>
                            <div class="progress my-1">
                                <div class="progress-bar bg-primary" role="progressbar" data-aos="zoom-in-right" data-aos-delay="100" data-aos-anchor=".skills-section" style="width: @items.Value%" aria-valuenow="@items.Value" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                    }
                                       
                </div>
                
            </div>
        </div>
    </div>
</div>